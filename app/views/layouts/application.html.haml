!!!
%html
  %head
    %title PTE Fine Arts | #{@title}  
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header#main_header
      #logo
        = link_to image_tag('common/logo.png', :alt => 'PTE Fine Arts'), home_path
      %nav
        %ul
          %li
            = link_to 'Artists', artists_path, :class => 'ajaxtransition', :remote => true 
          %li
            = link_to 'Events', events_path, :class => 'ajaxtransition', :remote => true 
          %li
            = link_to 'About', about_path, :class => 'ajaxtransition', :remote => true 
          %li
            = link_to 'Contact', contact_path, :class => 'ajaxtransition', :remote => true 
    .clear
    %section{:id => @actionClass, :class => 'main_content'}
      = yield
